# Telegram Bot Token from BotFather
BOT_TOKEN=your_bot_token_here

# Your Telegram API ID and API Hash from https://my.telegram.org
API_ID=1234567
API_HASH=your_api_hash_here

# MongoDB database URI (if you use MongoDB)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# Name of your bot's support channel & support group
SUPPORT_CHANNEL=@your_support_channel
SUPPORT_GROUP=@your_support_group

# Owner user ID
OWNER_ID=123456789

# Heroku app name (if needed for dyno management)
HEROKU_APP_NAME=your_heroku_app_name
HEROKU_API_KEY=your_heroku_api_key

# String session (if your bot needs userbot features)
STRING_SESSION=your_string_session_here
